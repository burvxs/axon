{
  "name": "axon",
  "version": "1.0.0",
  "description": "Axon by Cortex Labs - Lead Generator Performance Tracking",
  "main": "main.js",
  "author": "Cortex Labs",
  "productName": "Axon",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --reload",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac"
  },
  "build": {
    "appId": "com.cortexlabs.axon",
    "productName": "Axon",
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg"],
      "icon": "build/icon.png"
    },
    "dmg": {
      "title": "Axon Installer"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/.bin"
    ]
  },
  "keywords": [
    "tracker",
    "sales",
    "leads",
    "electron"
  ],
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.4.0"
  }
}
